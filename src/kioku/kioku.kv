#: import gch kivy.utils.get_color_from_hex

ScreenManager:
    MainScreen:
    GameScreen:


<MainScreen>:
    name: "main"
    md_bg_color: gch("#cccccc")
    MDBoxLayout:
        orientation: 'vertical'

        MainToolbar:

        ScrollView:

            MDList:
                id: levels


<GameScreen>:
    name: "game"


<MainToolbar>:
    md_bg_color: gch("#eeaa12")
    size_hint_y: None
    height: self.theme_cls.standard_increment
    padding: dp(10)
    spacing: dp(12)

    MDLabel:
        text: "kioku"

    Widget:

    MDIconButton:
        icon: "plus-circle-outline"
        pos_hint: {"center_y": .5}
        on_release: app.add_new_level()


<LevelDeleteButton>:
    icon: "minus-circle-outline"
    pos_hint: {"center_y": .5}
    on_release: app.show_alert_delete_level_dialog(self.name, self.path)


<LevelCoverListItem>:
    size_hint_y: None
    height: dp(100)

    canvas:
        Color:
            rgba:
                self.theme_cls.divider_color
        Line:
            points: (root.x+dp(16), root.y, root.x+self.width-dp(16)-0, root.y)

    MDBoxLayout:
        id: _right_container
        orientation: "horizontal"
        adaptive_height: True
        pos_hint: {"center_x": .5, "center_y": .5}
        padding: dp(15)
        spacing: dp(10)

        MDLabel:
            text: root.name
