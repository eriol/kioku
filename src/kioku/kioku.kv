#: import gch kivy.utils.get_color_from_hex

ScreenManager:
    MainScreen:
    GameScreen:
    SettingsScreen:

<MainScreen>:
    name: "main"
    md_bg_color: gch("#cccccc")
    MDBoxLayout:
        orientation: 'vertical'

        MainToolbar:

        ScrollView:

            MDList:
                id: levels

        MDRectangleFlatButton:
            text: "Start"
            on_press: root.manager.current = "game"

        MDRectangleFlatButton:
            text: "Settings"
            on_press: root.manager.current = "settings"


<GameScreen>:
    name: "game"


<SettingsScreen>:
    name: "settings"

    MDTextField:
        id: input_images_path
        pos_hint: {'center_x':0.5, 'center_y':0.1}
        helper_text: "Path to the images"
        helper_text_mode: "persistent"
        size_hint_x: 0.6
        pos_hint: {'center_y':0.75, 'center_x':0.5}

    MDRaisedButton:
        text: "Main"
        pos_hint: {'center_x':0.5, 'center_y':0.1}
        on_press: root.manager.current = "main"

<MainToolbar>:
    md_bg_color: gch("#eeaa12")
    size_hint_y: None
    height: self.theme_cls.standard_increment
    padding: dp(10)
    spacing: dp(12)

    MDLabel:
        text: "kioku"

    Widget:

    MDIconButton:
        icon: "plus-circle-outline"
        pos_hint: {"center_y": .5}
