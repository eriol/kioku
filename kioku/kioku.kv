ScreenManager:
    MainScreen:
    GameScreen:


<MainScreen>:
    name: "main"
    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "kioku"
            right_action_items: [["plus-circle-outline", lambda _: app.add_new_level()]]
            elevation: 10

        ScrollView:

            MDList:
                id: levels


<GameScreen>:
    name: "game"


<LevelDeleteButton>:
    icon: "trash-can"
    pos_hint: {"center_y": .5}
    on_release: app.show_alert_delete_level_dialog(self.name, self.path)


<LevelCoverListItem>:
    size_hint_y: None
    height: dp(100)

    canvas:
        Color:
            rgba:
                self.theme_cls.divider_color
        Line:
            points: (root.x+dp(16), root.y, root.x+self.width-dp(16)-0, root.y)

    MDBoxLayout:
        id: _right_container
        orientation: "horizontal"
        adaptive_height: True
        pos_hint: {"center_x": .5, "center_y": .5}
        padding: dp(15)
        spacing: dp(10)

        MDLabel:
            text: root.name
